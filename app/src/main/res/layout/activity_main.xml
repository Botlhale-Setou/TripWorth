<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_hourly_rate"
        android:hint="Desired hourly rate (e.g. 30)"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_save_prefs"
        android:text="Save Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_overlay_settings"
        android:text="Overlay Permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_instructions"
        android:layout_marginTop="16dp"
        android:text="Enable Accessibility service: Settings → Accessibility → TripWorth → Turn on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
